{
  "name": "monzo-crawler",
  "version": "1.0.0",
  "description": "A single-subdomain web crawler with CLI, concurrency controls, and URL normalization.",
  "type": "module",
  "bin": {
    "monzo-crawler": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/cli.js",
    "test": "vitest run --coverage",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "cheerio": "1.1.2",
    "commander": "14.0.2",
    "p-limit": "7.2.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "22.12.0",
    "@typescript-eslint/eslint-plugin": "8.46.3",
    "@typescript-eslint/parser": "8.46.3",
    "@vitest/coverage-v8": "4.0.7",
    "eslint": "9.39.1",
    "eslint-config-prettier": "10.1.8",
    "prettier": "3.6.2",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "4.0.7"
  }
}
